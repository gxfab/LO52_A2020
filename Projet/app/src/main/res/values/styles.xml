<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="mainActivityButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:shadowColor">@color/colorButtonShadow</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="editText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="textView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="stepTimeTextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:textColor">@color/colorStepTime</item>
    </style>

</resources>