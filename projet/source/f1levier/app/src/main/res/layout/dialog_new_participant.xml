<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@+id/text_view_participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participant_name" />

    <EditText
        android:id="@+id/edit_text_participant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_view_participant_name"
        android:inputType="text"
        android:singleLine="true" />

    <TextView
        android:id="@+id/text_view_participant_echelon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edit_text_participant_name"
        android:layout_marginTop="@dimen/text_margin"
        android:text="@string/participant_echelon" />

    <TextView
        android:id="@+id/text_view_participant_echelon_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_view_participant_echelon"
        android:layout_marginStart="@dimen/text_margin"
        android:layout_alignBottom="@id/text_view_participant_echelon"
        android:layout_marginTop="@dimen/text_margin"
        android:textColor="@android:color/black"
        android:text="" />

    <SeekBar
        android:id="@+id/seek_bar_participant_echelon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_view_participant_echelon"
        android:max="100"
        android:progress="1" />

</RelativeLayout>
