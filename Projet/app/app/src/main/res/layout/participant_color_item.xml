<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/participant_img"
        android:layout_width="@dimen/item_participant_row_img_size"
        android:layout_height="@dimen/item_participant_row_img_size"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/participant_row_item_participant_icon_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_participants" />

    <TextView
        android:id="@+id/participant_color_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/participant_color_item_text"
        app:layout_constraintBottom_toBottomOf="@+id/participant_img"
        app:layout_constraintStart_toEndOf="@+id/participant_img"
        app:layout_constraintTop_toTopOf="@+id/participant_img" />


</androidx.constraintlayout.widget.ConstraintLayout>