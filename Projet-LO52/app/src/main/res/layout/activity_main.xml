<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.main_activity.MainActivity"
    android:id="@+id/linearLayoutMain"
    android:orientation="vertical"
    android:layout_gravity="center_vertical">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/manageRunners"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingVertical="20dp"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="20dp"
            android:onClick="switchActivityRunners"
            android:text="@string/managing_runners"
            android:textSize="22sp"
            app:icon="@drawable/ic_round_person_24"
            app:iconGravity="textEnd"/>


        <Button
            android:id="@+id/manageTeams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:onClick="switchActivityTeams"
            android:paddingVertical="20dp"
            android:text="Manage teams"
            android:textSize="22sp"
            app:icon="@drawable/ic_round_group_24"
            app:iconGravity="textEnd"
            />

        <Button
            android:id="@+id/start_run"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:onClick="switchActivityTimeRunners"
            android:paddingVertical="20dp"
            android:text="@string/start_run"
            android:textSize="22sp"
            app:icon="@drawable/ic_round_emoji_flags_24"
            app:iconGravity="textEnd"
            />

        <Button
            android:id="@+id/stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:onClick="switchActivityStatistics"
            android:paddingVertical="20dp"
            android:text="@string/statistics"
            android:textSize="22sp"
            app:icon="@drawable/ic_round_assessment_24"
            app:iconGravity="textEnd" />


</LinearLayout>