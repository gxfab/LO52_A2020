    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coureur1_infos"
        android:padding="12dp"
        android:lines="1"
        android:gravity="top"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coureur2_infos"
        android:padding="12dp"
        android:lines="1"
        android:gravity="top"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coureur3_infos"
        android:padding="12dp"
        android:lines="1"
        android:gravity="top"/>

</LinearLayout>