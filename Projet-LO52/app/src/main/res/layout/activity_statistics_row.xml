<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        style="@style/Default.CarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/default_card_corner_radius"
        app:cardElevation="@dimen/default_card_elevation"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/default_padding"
            android:paddingVertical="@dimen/default_padding_half">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statisticsRecyclerViewRowTeamName"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingVertical="@dimen/default_padding_half"
                android:text="test"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:paddingVertical="@dimen/default_padding_half"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statisticsRecyclerViewRowRunnerName"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/default_padding"
                    android:text="test"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statisticsRecyclerViewRowRunnerActivity1"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/default_padding"
                    android:text="test"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statisticsRecyclerViewRowRunnerActivity2"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/default_padding"
                    android:text="test"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statisticsRecyclerViewRowRunnerActivity3"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/default_padding"
                    android:text="test"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statisticsRecyclerViewRowRunnerActivity4"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/default_padding"
                    android:text="test"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/statisticsRecyclerViewRowRunnerActivity5"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:lineSpacingExtra="@dimen/default_padding"
                    android:text="test"/>
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>