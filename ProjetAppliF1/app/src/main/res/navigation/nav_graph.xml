<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/StartFragment">

    <fragment
        android:id="@+id/StartFragment"
        android:name="com.tps.appf1.StartFragment"
        android:label="Start Fragment"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/action_StartFragment_to_CreateRaceFragment"
            app:destination="@id/CreateRaceFragment" />
    </fragment>
    <fragment
        android:id="@+id/CreateRaceFragment"
        android:name="com.tps.appf1.CreateRaceFragment"
        android:label="CreateRaceFragment"
        tools:layout="@layout/fragment_createrace">

        <action
            android:id="@+id/action_CreateRaceFragment_to_CreateTeamFragment"
            app:destination="@id/CreateTeamFragment" />
    </fragment>
    <fragment
        android:id="@+id/CreateTeamFragment"
        android:name="com.tps.appf1.CreateTeamFragment"
        android:label="Create Team Fragment"
        tools:layout="@layout/fragment_createteam">

        <action
            android:id="@+id/action_CreateTeamFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.tps.appf1.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/CreateTeamFragment" />
    </fragment>
</navigation>