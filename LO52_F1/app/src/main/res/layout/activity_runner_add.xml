<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunnerAddActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDDDDD"
        tools:context=".RunnerAddActivity"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="-168dp">

        <Button
            android:id="@+id/buttonok_runneradd"
            android:layout_width="196dp"
            android:layout_height="59dp"
            android:layout_marginTop="32dp"
            android:onClick="ok"
            android:text="OK"
            android:textSize="30sp"
            android:visibility="invisible"
            app:backgroundTint="#2196F3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonadd_runneradd" />

        <TextView
            android:id="@+id/labeloutof30_runneradd"
            android:layout_width="95dp"
            android:layout_height="34dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center|right"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/labelfirstname_runneradd"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="First Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/editfirstname_runneradd" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="295dp"
            android:layout_height="67dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Runners"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editfirstname_runneradd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#222222"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/labelfirstname_runneradd"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/editlastname_runneradd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#222222"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/labellastname__runneradd"
            app:layout_constraintTop_toBottomOf="@+id/editfirstname_runneradd" />

        <TextView
            android:id="@+id/labellevel_runneradd"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Level"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labellastname__runneradd" />

        <TextView
            android:id="@+id/selectedrunner_runneradd"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center|right"
            android:textColor="#FF9800"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/buttonremove_runneradd"
            app:layout_constraintEnd_toStartOf="@+id/buttonremove_runneradd" />

        <TextView
            android:id="@+id/labellastname__runneradd"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="Last Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelfirstname_runneradd" />

        <Button
            android:id="@+id/buttonadd_runneradd"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="28dp"
            android:hint="@string/addrunner"
            android:onClick="addRunner"
            android:text="Add"
            app:backgroundTint="#2196F3"
            app:layout_constraintEnd_toEndOf="@+id/spinner_runneradd"
            app:layout_constraintTop_toBottomOf="@+id/spinner_runneradd" />

        <Button
            android:id="@+id/buttonremove_runneradd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:onClick="removeRunner"
            android:text="-"
            android:textColor="#F44336"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buttonadd_runneradd" />

        <Spinner
            android:id="@+id/spinner_runneradd"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#E1E1E1"
            app:layout_constraintStart_toEndOf="@+id/labellevel_runneradd"
            app:layout_constraintTop_toBottomOf="@+id/editlastname_runneradd" />

        <ListView
            android:id="@+id/listview_runneradd"
            android:layout_width="370dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="@+id/labeloutof30_runneradd"
            app:layout_constraintTop_toTopOf="@+id/editfirstname_runneradd" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>