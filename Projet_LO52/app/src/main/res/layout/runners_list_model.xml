<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/runner_name"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="18dp"
        android:padding="10dp"
        android:text="Nom" />

    <TextView
        android:id="@+id/runner_level"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/runner_name"
        android:padding="10dp"
        android:text="Niveau" />

    <Button
        android:id="@+id/delete_runner_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="302dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/runner_level"
        android:onClick="deleteRunner"
        android:padding="10dp"
        android:text="Supprimer" />

</RelativeLayout>